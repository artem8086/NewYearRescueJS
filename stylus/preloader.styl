.game-wrapper
	position relative
	overflow hidden
	width 1024px
	height 640px
	.preloader
		position absolute
		width 100%
		height 100%
		top 0
		left 0
		z-index 10
		background-color #000
		display -webkit-flex
		display -moz-flex
		display -ms-flex
		display -o-flex
		display flex
		visibility visible
		transition 1.5s all
		.loader-wrapper
			margin auto
			text-align center
			.logo
				background-image url(../images/artsoft.png)
				background-repeat no-repeat
				background-size contain
				background-position center
				width 569px
				height 104px
			.loader
				margin 40px auto 40px auto
				transform-origin center
				width 64px
				height 64px
				border 8px solid #ccc
				border-top-color #33F
				border-radius 100%
				animation 1s spin infinite linear
				box-shadow 0 0 3px rgba(1, 1, 1, 0.5)
		&.done
			opacity 0
			visibility hidden
			.loader
				visibility hidden

@keyframes spin
	from
		transform rotate(0deg)
	to
		transform rotate(360deg)
                
			
	